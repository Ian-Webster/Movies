@model List<Movies.Domain.DTO.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card" style="margin-top:25px">
    <div class="card-body">
        <h2 class="card-title">Top 5 Movies</h2>
        <table class="table">
            <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                    @(Model.IndexOf(item) + 1)
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AverageRatingForDisplay)
                    </td>
                    <td>
                        @Html.ActionLink("View", "Details", controllerName: "Movie", new { id = item.Id }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>