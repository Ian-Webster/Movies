@model Movies.Domain.DTO.Movie

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card" style="margin-top:25px">
    <div class="card-body">
        <h2 class="card-title">Edit @Model.Title</h2>
        <div class="row">
            <div class="col-md-4">
                @using (Html.BeginForm("Edit", "Movie", new { area = "Admin" }))
                {
                    @await Html.PartialAsync("_MovieFormFields")
                    @await Html.PartialAsync("_formButtons")
                }
            </div>
        </div>
    </div>
</div>
