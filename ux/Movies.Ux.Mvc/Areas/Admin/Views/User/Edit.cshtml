@model Movies.Domain.DTO.User

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card" style="margin-top:25px">
    <div class="card-body">
        <h2 class="card-title">Edit @Model.UserName</h2>
        @using (Html.BeginForm("Edit", "User", new { area = "Admin" }))
        {
            @await Html.PartialAsync("_UserFormFields")
            @await Html.PartialAsync("_formButtons")
        }
    </div>
</div>
